<div class="d-flex justify-content-center align-items-center flex-column">

  <h1 class="mb-5">{{title}}</h1>
  <div class="w-100 px-4">
    <div class="d-flex justify-content-end">
      <div class="d-flex justify-content-between align-items-center my-2 bg-dark w-25 p-2">
        <p class="h6 m-0 text-white">Delete users without activity for 2 days</p>
        <button class="btn btn-danger" onclick="deleteUsersWithoutActivity()">Delete</button>
      </div>
    </div>
    {{#if allUsers.length}}
    <table id="tableProduct" class="table table-striped table-dark">

      <thead class="text-center">
        <tr>
          <th scope="col">#ID</th>
          <th scope="col">Email</th>
          <th scope="col">Username</th>
          <th scope="col">#Cart</th>
          <th scope="col">Role</th>
          <th scope="col">UploadedDocuments</th>
          <th scope="col">Last Connection</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <tbody class="text-center">
        {{#each allUsers}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.email}}</td>
          <td>{{this.username}}</td>
          <td>{{this.cart}}</td>
          <td>{{this.role}}</td>
          <td>{{this.uploadedDocuments}}</td>
          <td>{{this.last_connection}}</td>
          <td><button class="btn btn-danger p-1 m-1" onclick="deleteUser('{{this._id}}')">Delete</button>
          <button class="btn btn-warning p-1 m-1" onclick="changeRole('{{this._id}}')">Change Role</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
    <h3>No hay usuarios para mostrar!</h3>
    {{/if}}
  </div>

  <script src="/static/js/userControlPanel.js"></script>
